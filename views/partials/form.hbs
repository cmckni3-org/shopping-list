<div class="form-content">
  <div class="field">
    <label for="name">Name</label>
    <input type="text"
           name="name"
           id="name"
           value="{{name}}"
           required="required" />
  </div>
  <div class="form-actions">
    <input type="submit"
           class="save button"
           value="Save" />
    <a href="/"
       class="cancel">Cancel</a>
  </div>
</div>
